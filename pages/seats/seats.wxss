.container {
  padding: 10px;
}

.title {
  font-size: 18px;
  color: #007aff;
  font-weight: bold;
  text-align: center;
}

.library-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.floor-switch {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.seats-table {
  border: 1px solid #ccc;
}

.seats-header {
  display: flex;
  justify-content: space-between;
  background-color: #f1f1f1;
  padding: 10px;
}

.seats-row {
  display: flex;
  justify-content: space-between;
  padding: 10px;
}

.seat-item {
  flex: 1;
  text-align: center;
  padding: 10px;
  cursor: pointer;
}

.confirm-button {
  margin-top: 20px;
  background-color: #007aff;
  color: white;
  padding: 10px;
  text-align: center;
  border: none;
  border-radius: 20px;
}

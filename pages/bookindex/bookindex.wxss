.container {
  padding: 10px;
}

.banner {
  width: 100%;
  height: 80px; /* 调整为你想要的高度 */
  max-height: 80px; /* 最大高度 */
  object-fit: cover; /* 填充并保持比例 */
}

.announcement {
  margin: 10px 0;
  padding: 10px;
  background-color: #e0f7fa; /* 浅蓝色背景 */
  border-radius: 8px; /* 更圆的边角 */
  border: 1px solid #b2ebf2; /* 边框颜色 */
}

.announcement-text {
  font-size: 18px; /* 增加字体大小 */
  color: #007aff; /* 蓝色字体 */
  font-family: 'Arial', sans-serif; /* 替换为你想要的字体 */
  font-weight: bold; /* 加粗字体 */
  text-align: center; /* 居中对齐 */
}

.news {
  margin: 20px 0; /* 增加上下间距 */
}

.news-item {
  display: flex;
  margin-bottom: 15px; /* 每条新闻之间的间距 */
}

.news-image {
  width: 100px; /* 设置图片宽度 */
  height: 100px; /* 设置图片高度 */
  margin-right: 15px; /* 图片和文字之间的间距 */
  border-radius: 5px; /* 添加圆角效果 */
}

.news-text {
  flex: 1; /* 让文字部分占据剩余空间 */
}

.news-title {
  font-weight: bold;
  color: #0056b3; /* 深蓝色标题 */
  font-size: 16px; /* 标题字体大小 */
}

.news-description {
  color: #666; /* 描述颜色 */
  font-size: 14px; /* 描述字体大小 */
}

.footer {
  display: flex;
  justify-content: space-around; /* 等分布局 */
  align-items: center; /* 垂直居中 */
  background-color: #dee0e2; /* 设置背景色，例如蓝色 */
  color: white; /* 设置文字颜色为白色 */
  padding: 10px 0;
  border-top: 1px solid #ccc; /* 顶部边框 */
  position: fixed; /* 固定定位 */
  bottom: 0; /* 距离底部 0 */
  left: 0; /* 距离左侧 0 */
  right: 0; /* 距离右侧 0 */
  z-index: 1000; /* 确保在最上层 */
}

.footer-item {
  flex: 1;
  text-align: center;
  color: #333; /* 字体颜色 */
  font-size: 14px; /* 字体大小 */
}

.footer-icon {
  width: 24px; /* 图标宽度 */
  height: 24px; /* 图标高度 */
  display: block;
  margin: 0 auto; /* 居中图标 */
}

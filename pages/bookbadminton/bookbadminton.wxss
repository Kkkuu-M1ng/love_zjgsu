.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
  padding: 10px;
  flex: 1; /* 使容器充满剩余空间 */
}

.title {
  font-size: 22px;
  color: #007aff;
  font-weight: bold;
  text-align: center;
}

.court-image {
  width: 100%;
  height: 200px; /* 根据需要调整 */
  margin-bottom: 20px; /* 添加间隔 */
}

.seat-group {
  display: inline-block; /* 使每个座位组在一行中 */
  margin-right: 10px; /* 座位组之间的间距 */
}

.seat-number {
  font-weight: bold; /* 加粗座位号 */
  margin-bottom: 5px; /* 座位号与座位之间的间距 */
}

.seat-item {
  display: flex;
  flex-direction: column; /* 纵向排列时间段和状态 */
  align-items: center; /* 水平居中 */
  padding: 5px; /* 减少内边距 */
  width: 60px; /* 设置每个座位项的宽度，稍微缩小 */
  border-radius: 10px; /* 圆角 */
  background-color: green; /* 默认按钮背景色 */
  color: white;
  cursor: pointer;
}

.seat-item[style*='red'] {
  background-color: red; /* 已约按钮的背景色 */
}

.time-slot {
  font-size: 12px; /* 减小时间段字体大小 */
  margin-bottom: 3px; /* 时间段与状态之间的间距 */
}

.footer {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 10px 0;
  width: 100%;
  border-top: 1px solid #ccc;
  position: fixed; /* 固定在底部 */
  bottom: 0;
}

.footer-item {
  text-align: center;
}

.footer-icon {
  width: 24px; /* 根据实际需要调整 */
  height: 24px;
  margin-bottom: 4px; /* 图标和文本之间的间距 */
}

.confirm-button {
  margin-top: 20px;
  background-color: #007aff;
  color: white;
  padding: 10px;
  text-align: center;
  border: none;
  border-radius: 20px;
  cursor: pointer;
}